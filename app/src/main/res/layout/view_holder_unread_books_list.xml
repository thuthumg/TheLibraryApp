<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_card_medium"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_medium_2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBookCoverPhoto"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_book_pic" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAudio"
            android:visibility="gone"
            android:background="@drawable/image_bg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start|bottom"
            android:layout_margin="@dimen/margin_small"
            android:src="@drawable/ic_baseline_audio_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivContextualMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_small"
            android:src="@drawable/ic_more_64" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Learn UX: Design Book"
        android:textColor="@color/whiteDark9"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Jeff Gothelf"
        android:textColor="@color/whiteDark9"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold" />
</LinearLayout>

