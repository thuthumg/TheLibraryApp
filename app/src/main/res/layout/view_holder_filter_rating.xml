<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_medium"
    app:strokeWidth="1dp"
    app:strokeColor="@color/whiteDark5"
    app:cardCornerRadius="@dimen/margin_medium_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:paddingBottom="@dimen/margin_medium"

        android:paddingTop="@dimen/margin_medium"

        android:paddingEnd="@dimen/margin_card_medium_2"

        android:paddingStart="@dimen/margin_card_medium_2"
       android:textStyle="bold"
        android:textSize="@dimen/text_regular_2x"
        android:textColor="@color/whiteDark10"
        android:text="1"
        android:drawablePadding="@dimen/margin_medium"
        android:drawableEnd="@drawable/ic_baseline_star_gray_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.google.android.material.card.MaterialCardView>