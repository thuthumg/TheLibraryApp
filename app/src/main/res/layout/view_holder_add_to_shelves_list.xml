<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/margin_medium_2"

                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:cardCornerRadius="@dimen/margin_medium">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBookCoverPhoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sample_book_cover_two"
                    android:scaleType="centerCrop"/>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/margin_medium">

                <androidx.appcompat.widget.AppCompatImageView

                    android:src="@drawable/sample_book_cover_two"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"/>

            </com.google.android.material.card.MaterialCardView>


        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Advanced Android App Architecture"
                android:textColor="@color/black"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="0 books"
                android:textColor="@color/whiteDark9"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/chkBookItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-20dp"
        android:background="@color/whiteDark5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="@color/white" />



</LinearLayout>